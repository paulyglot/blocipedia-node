<!DOCTYPE html>
<html>
<head>
    <% include ../static/partials/head.ejs %>
</head>
<body>
    <% include ../static/partials/navbar.ejs %>
    
    <main class="container">
        <h2 class="page-header">Public wikis</h2>
        <% if(!currentUser) { %>
            <small>Please sign up or sign in to create your own wiki topic. </small>
            <br>
            <a href="/users/signup" class="btn btn-primary" id="signup-button">Sign Up</a>
            <% } %>
            <% include ../static/partials/messages.ejs %>
            <% if(!currentUser) { %>
            <% } %>
        <ul class="list-group">
            <% wikis.forEach((wiki) => { %>
            <% if(wiki.private === false) { %>
            <li class="list-group-item">
                <a href="/wikis/<%= wiki.id %>">
                    <%- wiki.title %> </a>
            </li>
            <% } %>
            <% }) %>
        </ul>
        <section>
            <% if(currentUser) { %>
                <a href="/wikis/new" class="btn btn-success">create new wiki</a>
                <% } %>
        </section>
    </main>
</body>
</html>