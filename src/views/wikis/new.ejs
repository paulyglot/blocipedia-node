<!DOCTYPE html>
<html>
<head>
    <% include ../static/partials/head.ejs %>
</head>
<body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <h1>add new wiki</h1>
        <form action="/wikis/create" method="post">
            <div class="form-group">
                <label for="title">Wiki title</label>
                <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
            </div>
            <div class="form-group">
                <label for="body">Wiki body</label>
                <textarea rows="4" class="form-control" name="body" placeholder="Enter Post body"></textarea>
            </div>
            <% if(currentUser && (currentUser.role === "admin" || currentUser.role === "premium")) { %>
            <p>Public or Private Wiki?</p>
            <div class="form-group">
                <label for="private">Wiki Status</label>
                <select class="form-control" name="private">
                    <option value="false">Public</option>
                    <option value="true">Private</option>
                </select>
            </div>
            <% } %>
            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
</body>
</html>