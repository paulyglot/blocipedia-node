<!DOCTYPE html>
<html>
<head>
    <% include ../static/partials/head.ejs %>
</head>
<body background="https://images.pexels.com/photos/746421/pexels-photo-746421.jpeg?cs=srgb&dl=cliffs-climbing-clouds-746421.jpg&fm=jpg">
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
        <% include ../static/partials/messages.ejs %>
        <h1>Private Wikis</h1>
        <% if(currentUser && currentUser.role !== "standard") { %>
        <a href="/wikis/new" class="btn btn-success">Create Private Wiki</a>
        <% } %>
        <hr>
        <ul class="list-group">
            <% wikis.forEach((wiki) => { %>
            <% if(wiki.private === true && wiki.userId === currentUser.id) { %>
            <li class="list-group-item">
                <a href="/wikis/<%= wiki.id %>">
                    <%= wiki.title %> </a>
            </li>
            <% } %>
            <% }) %>
        </ul>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
</body>
</html>